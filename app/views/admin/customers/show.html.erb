<div class="container">
  
    <div class="pt-5">
      <h1><%= @customer.last_name %><%= @customer.first_name %>さんの詳細</h1>
 
      <table class="table">
        <tr>
            <th>会員ID</th>
            <th><%= @costomer.id %></th>
        </tr>
        
        <tr>
            <th>会員名</th>
            <th><%= @customer.last_name %><%= @customer.first_name %></th>
        </tr>
        
        <tr>
            <th>フリガナ</th>
            <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
        </tr>
        
        <tr>
            <th>郵便番号</th>
            <th><%= @costomer.post_code %></th>
        </tr>
        
        <tr>
            <th>住所</th>
            <th><%= @costomer.address %></th>
        </tr>
        
        <tr>
            <th>電話番号</th>
            <th><%= @costomer.phone_number %></th>
        </tr>
        
        <tr>
            <th>メールアドレス</th>
            <th><%= @costomer.email %></th>
        </tr>
        
        <tr>
            <th>会員ステータス</th>
            <th>
                <%= @costomer.is_deleted == true %>
                退会
                <% else %>
                会員
                <% end %>
            </th>
        </tr>

　　　　<tr>
            <th><%= link_to "編集", edit_admin_customer_path(customer.id), class="btn btn-success" %></th>
            <th><%= link_to "注文履歴一覧", admin_root_path(customer_id: @customer.id), class="btn btn-info" %></th>
        </tr>

      </table>

  </div>

</div>
