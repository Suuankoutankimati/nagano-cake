<div class="container">

<h2>会員情報編集(管理者）</h2>

 <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>

  <div class="field form-group col-xs-12">
    <%= f.label :"名前", class:"col-sm-3 form-label" %>
    <%= f.label :"(姓)", class:"col-sm-1 form-label" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"col-sm-3" %>
    <%= f.label :"(名)",class:"col-sm-1 form-label" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"col-sm-3" %>
  </div>
  
  
  <div class="field form-group col-xs-12">
    <%= f.label :"フリガナ", class:"col-sm-3 form-label" %>
    <%= f.label :"(セイ)",class:"col-sm-1 form-label" %>
    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name", class:"col-sm-3" %>
    <%= f.label :"(メイ)",class:"col-sm-1 form-label" %>
    <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name", class:"col-sm-3" %>
  </div>
  
  <div class="field form-group col-xs-12">
    <%= f.label :"郵便番号(ハイフンなし)", class:"col-sm-4 form-label" %>
    <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class:"col-sm-3" %>
  </div>
  
  <div class="field form-group col-xs-12">
    <%= f.label :"住所", class:"col-sm-4 form-label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"col-sm-7" %>
  </div>
  
  <div class="field form-group col-xs-12">
    <%= f.label :"電話番号(ハイフンなし)", class:"col-sm-4 form-label" %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"col-sm-3" %>
  </div>
  
  <div class="field form-group col-xs-12">
    <%= f.label :"メールアドレス", class:"col-sm-4 form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-sm-3" %>
  </div>
  
  
  <div class="form-group">
            <%= f.label :会員ステータス %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会", value: :true %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "会員", value: :false %>
    </div>
  

  <div class="actions">
    <%= f.submit "編集内容を保存", class:"btn btn-success" %>
  </div>
<% end %>

</div>
