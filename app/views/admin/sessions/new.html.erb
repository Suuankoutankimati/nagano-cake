

<section class="section">
  <div class="container">
    <!--<div class="row">-->
      <div class="column is-5">
      <h1 class="col-md-1 offset-md-12">
        ログイン画面
      </h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="col-md-1 offset-md-10">
            <%= f.label :email, class: "label" %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            <p class="has-icons-left">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size:"40x3", :placeholder => "email", class: "input" %>
            </p>
          </div>

          <div class="col-md-1 offset-md-10">
            <%= f.label :password, class: "label" %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            <p class="has-icons-left">
              <%= f.password_field :password, autocomplete: "current-password", size:"40x3", :placeholder => "password", class: "input" %>
            </p>
          </div>

          <div class="col-md-1 offset-md-10">
            <%= f.submit "Log in", class: "button is-success" %>
          </div>
        <% end %>
        </br>
        </br>
        </br>
        </br>
        </br>

        <%= render "admin/shared/links" %>
      <!--</div>-->
    </div>
  </div>
</section>
