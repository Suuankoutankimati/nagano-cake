<h2>ジャンル編集画面</h2>

  <div class="row flex-column align-items-center mt-3">
    <%= form_with(model: @genre, url: admin_genre_path, local: true, method: :patch) do |f| %>
      <div class="form-group row">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: "form-control genre" %>
      </div>

      <div class="row">
        <%= f.submit  class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
