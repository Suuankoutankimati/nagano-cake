

<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">ジャンル編集画面</h5>
          <p class="card-text"></p>

             <%= form_with(model: @genre, url: admin_genre_path, local: true, method: :patch) do |f| %>
              <div class="form">
               <%= f.label :ジャンル名 %>
                <%= f.text_field :name, class: "form-control genre" %>
               </div>
               <div class="updatebtn">
               <%= f.submit  class: 'btn btn-light-success' %>
               </div>
             <% end %>
        </div>
      </div>
    </div>
  </div>
</div>