   <% @genres.each  do |genre| %>
   <%= genre.name %>
   <div><%= link_to("ジャンル編集", edit_admin_genre_path(genre), class: "btn btn-sm btn-success") %></div>
   <% end %>


<%= form_with(model: @genre, url: admin_genres_path, method: :post, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control name' %>
  </div>

  <div class="form-group">
    <%= f.submit  class: 'btn btn-success' %>
  </div>
<% end %>
<%= paginate @genres %>