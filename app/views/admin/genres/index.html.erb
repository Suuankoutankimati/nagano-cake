

<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ジャンル名</th>
            <th scope="col"></th>
            <th scope="col">　</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each  do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to("ジャンル編集", edit_admin_genre_path(genre), class: "btn btn-autoline-success") %></td>
               <% end %>
              <td>
                  <%= form_with(model: @genre, url: admin_genres_path, method: :post, local: true) do |f| %>
                  <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: 'form-control name' %>
                  </div>

                  <div class="form-group">
                    <%= f.submit  class: 'btn btn-autoline-success' %>
                  </div>
                <% end %>
              </td>
            </tr>

        </tbody>
      </table>
<%= paginate @genres %>
    </div>
  </div>
</div>








