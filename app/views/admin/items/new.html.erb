<h1>商品新規登録new</h1>

 <%= form_with(model: @item, url: admin_items_path, method: :post, local: true) do |f| %>

    <div class="form-group">
        <%= f.label :name %>
          <%= f.text_field :name, class: "form-control name" %>
    </div>

    <div class="form-group">
      <%#= f.collection_select(:genre_id, @genres, :id, :name, prompt: "----", class: "form-control genre_id") %>
    </div>

   <div class="form-group">
    <%= f.label :non_tax_price %>
      <%= f.text_field :non_tax_price, class: "form-control non_tax_price" %>
  </div>

   <div class="form-group">
    <%= f.label :image %>
      <%= f.attachment_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :introduction %>
      <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>

  <div class="form-group">
  	<%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "売切れ" %>
  </div>

  <%= f.submit class: 'btn btn-secondary' %>
 <% end %>
