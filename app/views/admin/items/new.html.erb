
 
 <div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">新規商品登録画面</h5>
          <p class="card-text"></p>

             <%= form_with(model: @item, url: admin_items_path, method: :post, local: true) do |f| %>

            <div class="form-group">
                <%= f.label :name %>
                  <%= f.text_field :name, class: "form-control name" %>
            </div>
        
            <div class="form-group">
              <%= f.label :genre %></br>
              <%#= f.collection_select(:genre_id, @genres, :id, :name, prompt: "----", class: "form-control genre_id") %>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control genre" %>
              <%#= f.collection_select(:genre_id, :id, :name, prompt: "選択してください") %>
            </div>
        
            <div class="form-group">
            <%= f.label :non_tax_price %>
              <%= f.text_field :non_tax_price, class: "form-control non_tax_price" %>
            </div>
        
           <div class="form-group">
            <%= f.label :image %>
              <%= f.attachment_field :image %>
          </div>
        
          <div class="form-group">
            <%= f.label :introduction %>
              <%= f.text_area :introduction, class: "form-control introduction" %>
          </div>
        
            <div class="form-group">
          	    <%= f.radio_button :is_active, true %>
                <%= f.label :is_active, "販売中", value: :true %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, "売切れ", value: :false %>
            </div>
            <div>
            <%= f.submit :新規登録, class: "btn btn-primary" %>
            </div>
         <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
