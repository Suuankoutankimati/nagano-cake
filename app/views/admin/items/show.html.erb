
		
 <div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
        	<div class="col-xs-5">
						<%= attachment_image_tag(@item, :image,size: "300x217", fallback: "no_image.jpg") %>
					</div>
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">ジャンル名</th>
            <th scope="col">税抜き価格</th>
            <th scope="col">商品説明</th>
            <th scope="col">販売ステータス</th>
          </tr>
        </thead>
        <tbody>
         
            <tr>
              <td><%= @item.name %></td>
              <td><%= @item.non_tax_price %> 円</td>
              <td><%= @item.genre.name %></td>
              <td><%= @item.introduction %></td>
              <td>
                	<% if @item.is_active == true %>
									販売中
									<% elsif @item.is_active == false %>
									売切れ
									<% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
