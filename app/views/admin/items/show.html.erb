
<fieldset class="col-3 mx-auto">
  <%= attachment_image_tag @item, :image, size:'250x200' %>
</fieldset>
 <div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <div class="image11">
          </div>
              <h5 class="card-title">商品名</h5>
              <p class="card-text"><%= @item.name %></p>
              <p class="card-text">ジャンル名</p>
              <p class="card-text"><small><%= @item.genre.name %></small></p>
              <p class="card-text">税抜価格</p>
              <p class="card-text"><small><%= @item.non_tax_price %>　円</small></p>
              <p class="card-text">商品説明</p>
              <p class="card-text"><small><%= @item.introduction %></small></p>
              <p class="card-text">販売ステータス</p>
              <p class="card-text"><small>
                 <% if @item.is_active == true %>
      					　販売中
      					<% elsif @item.is_active == false %>
      					　売切れ
      					<% end %>
          </small></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</br>
 <fieldset class="col-1 mx-auto">
  <%= link_to("編集", edit_admin_item_path, class: "btn btn-light") %>
</fieldset>
</br>
