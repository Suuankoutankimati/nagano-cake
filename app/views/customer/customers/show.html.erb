<div class="container">
    <div class="row">
        <h2>マイページ</h2>
    </div>
    
    <div class="row">
        <h4>登録情報</h4>
        <%= link_to "編集する",edit_customer_path(@customer),class:"btn btn-success" %>
    </div>

    <div class="row">
        <table class="table">
            <tr>
            <th scope="row">氏名</th>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
            </tr>
            <tr>
            <th scope="row">カナ</th>
            <td><%= @customer.kana_last_name %><%= @customer.kana_first_name %></td>
            </tr>
            <tr>
            <th scope="row">郵便番号</th>
            <td><%= @customer.post_code %></td>
            </tr>
            <tr>
            <th scope="row">住所</th>
            <td><%= @customer.address %></td>
            </tr>
            <tr>
            <th scope="row">電話番号</th>
            <td><%= @customer.phone_number %></td>
            </tr>
            <tr>
            <th scope="row">メールアドレス</th>
            <td><%= @customer.email %></td>
            </tr>
        </table>
    </div>
    <div class="row">
        <h4>配送先</h4>
        <%= link_to "一覧を見る",addresses_path(@customer),class:"btn btn-primary" %>
    </div>
    <div class="row">
        <h4>注文履歴</h4>
        <%= link_to "一覧を見る",orders_path(@customer),class:"btn btn-primary" %>
    </div>
</div>
