<div class="container">
    
    <h2>配送先登録/一覧</h2>
    
    <div class="row">
    <%= form_with model: @address, url: addresses_path, local: true do |f| %>
     
        <div class="field form-group col-xs-12">
            <%= f.label :"郵便番号(ハイフンなし)", class:"col-sm-4 form-label" %>
            <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class:"col-sm-3" %>
        </div>
      
        <div class="field form-group col-xs-12">
            <%= f.label :"住所", class:"col-sm-4 form-label" %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"col-sm-7" %>
        </div>
      
        <div class="field form-group col-xs-12">
            <%= f.label :"宛名", class:"col-sm-4 form-label" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-sm-3" %>
        </div>
    
        <div class="actions">
            <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
    <% end %>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th class="col-2">郵便番号</th>
                    <th class="col-4">住所</th>
                    <th class="col-2">宛名</th>
                    <th class="col-3"></th>
                </tr>
            </thead>
            <tbody>
                <% @addresses.each do |address| %>
                    <tr>
                        <td><%= address.post_code %></td>
                        <td><%= address.address %></td>
                        <td><%= address.name %></td>
                        <td>
                            <%= link_to "編集する",edit_address_path(address),class:"btn btn-success" %>
                            <%= link_to "削除する",address_path(address),method: :delete,class:"btn btn-danger" %>
                        </td>
                    </tr>
                <% end %>
          </tbody>
        </table>
    </div>
</div>
