<div class="container"  style="background-color: red; padding: 50px;">
  <h2 class="title">商品一覧</h2>
    <span>全<%= @items.count %>件</span>
      <div class="row" style="background-color: green; margin-left: 0; margin-right: 0;">
            <% @items.each do |item| %>
              <div class="col-md-3">
                <%= link_to item_path(item) do %>
                	<%= attachment_image_tag item, :image, size:'215x215' %>
                <% end %>
              		<br /><%= item.name %>
              		<br />¥<%= item.non_tax_price %>
              </div>
            <% end %>
      </div>
      <div class="row" style="background-color: green; margin-left: 0; margin-right: 0;">
        <%= paginate @items %>
      </div>
  </div>
</div>