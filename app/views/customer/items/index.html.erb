<div class="container">
  <div class="row">
    <%= render "layouts/sidebar", genres: @genres %>
      <div class="mainContents col-sm-9 col-sm-push-3 col-md-9 col-md-push-3">
        <h2 class="subtitle">Item</h2>
          <span>全<%= @items_all.count %>件</span>
            <div class="row">
              <% @items.each do |item| %>
                <div class="col-md-4">
                  <%= link_to item_path(item) do %>
                  
                    <%= image_tag ('bunny1.jpeg'), size: "35x35", alt: "icon" %></th>
                  <% end %>
                    <br /><%= item.name %>
                    <br />¥<%= item.non_tax_price.to_s(:delimited) %>
                </div>
              <% end %>
            </div>
            <div class="paginate text-right">
              <%= paginate @items %>
            </div>
      </div>
    </div>
  </div>