<div class="container">
    
    <h2>ショッピングカート</h2>
    <td><%= link_to "カートを空にする",destroy_all_cart_items_path(@cart_item), class:"btn btn-danger", method: :delete  %></td>
    
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th class="col-4">商品名</th>
                    <th class="col-1">単価(税込)</th>
                    <th class="col-1">数量</th>
                    <th class="col-1">小計</th>
                    <th class="col-1"></th>
                </tr>
            </thead>
            <tbody>
               
                <% @cart_items.each do |cart_item| %>
                <tr>
                    <td>
                        <%= link_to item_path(cart_item.item_id) do %>
                            <%= attachment_image_tag cart_item.item, :image, size:'60x40' %>
                            <%= cart_item.item.name %>
                        <% end %>
                    </td>
                    <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
                    <td>
                        <%= form_with model: cart_item, url:cart_item_path(cart_item), local: true do |f| %>
                            <%= f.hidden_field :id, :value =>cart_item.id %>
                            <%= f.select :amount, *[1..10] %>
                            <%=f.submit "変更",class:"btn btn-success"%>
                        <% end %>
                    </td>
                    <td><%= cart_item.subtotal.to_s(:delimited) %>円</td>
                    <td><%= link_to "削除する",cart_item_path(cart_item),method: :delete,class:"btn btn-danger" %></td>
                </tr>
                <% end %>
          </tbody>
        </table>
    </div>
    <div class="row">
        <%= link_to "買い物を続ける",items_path,class:"btn btn-primary" %>
        <table class="table col-3">
            <thead>
                <tr>
                    <td>合計金額</td>
                    <td><%= (@total.to_s(:delimited)) %></td>
                </tr>
            </thead>
        </table>
    </div>
    <div class="row">
        <%= link_to "情報入力に進む",new_order_path,class:"btn btn-success" %>
    </div>
</div>
