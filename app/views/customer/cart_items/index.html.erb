<div class="container">
    
    <h2>ショッピングカート</h2>
    <tr><%= link_to "カートを空にする",destroy_all_cart_items_path(@cart_item),method: :delete,class:"btn btn-denger" %></tr>
    
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th class="col-4">商品名</th>
                    <th class="col-1">単価(税込)</th>
                    <th class="col-1">数量</th>
                    <th class="col-1">小計</th>
                    <th class="col-1"></th>
                </tr>
            </thead>
            <tbody>
                    <% @cart_items.each do |cart_item| %>
                    <tr>
                        <td><%= cart_item.item.name %></td>
                        <td><%= cart_item.item.with_tax_price %></td>
                        <td><%= cart_item.amount %></td>
                        <td><%= cart_item.subtotal %></td>
                        <td><%= link_to "削除する",cart_item_path(cart_item),method: :delete,class:"btn btn-danger" %></td>
                    </tr>
                    <% end %>
          </tbody>
        </table>
    </div>
    <div class="row">
        <%= link_to "買い物を続ける",items_path,class:"btn btn-primary" %>
        <table class="table col-3">
            <thead>
                <tr>
                    <td>合計金額</td>
                    <!--まだ反映できていない-->
                </tr>
            </thead>
        </table>
    </div>
    <div class="row">
        <%= link_to "情報入力に進む",new_order_path,class:"btn btn-success" %>
    </div>
</div>
