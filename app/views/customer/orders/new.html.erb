<div class="mainContents col-sm-9 col-sm-push-3 col-md-9 col-md-push-3">
  <h1 class="subtitle">注文情報入力</h1>

  <div class="container form-contents">
    <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>
      <%= render  "customer/shared/error_messages", resource: @order %>

        <h4>支払方法</h4>
          <div class= "field form-group row justify-content-center">
            <div class="col-md-6 mb-3">
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
           </div>
            <div class="col-md-6 mb-3">
            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
            </div>
          </div>

        <h4>お届け先</h4>
          <div class= "field form-group row justify-content-center">
            <div class="col-md-12 mb-6">
            <%= f.radio_button :address_number, 1 %>
            <%= f.label :address_number_1, "ご自身の住所" %><br />
            &emsp;〒<%= current_customer.post_code + current_customer.address %><br />
            &emsp;&emsp;<%= current_customer.last_name + current_customer.first_name %>
            </div>
          </div>
          <div class= "field form-group row justify-content-center">
            <div class="col-md-12 mb-6">
            <%= f.radio_button :address_number, 2 %>
            <%= f.label :address_number_2, "登録済住所から選択" %><br />
            &emsp;<%= f.select :address_id, options_from_collection_for_select(@addresses.all, :id, :full_address) %>
          </div>
          </div>
          <div class= "field form-group row justify-content-center">
            <div class="col-md-12 mb-6">
            <%= f.radio_button :address_number, 3 %>
            <%= f.label :address_number_3, "新しいお届け先" %>
            <table>
              <tr>
                <td>&emsp;<%= f.label :post_code, "郵便番号(ハイフンなし)" %></td>
                <td><%= f.text_field :post_code %></td>
              </tr>
              <tr>
                <td>&emsp;<%= f.label :address, "住所" %></td>
                <td><%= f.text_field :address %></td>
              </tr>
              <tr>
                <td>&emsp;<%= f.label :name, "宛名" %></td>
                <td><%= f.text_field :name %></td>
              </tr>
            </table>
            </div>
          </div>

          <div class= "field form-group row justify-content-center">
            <%= f.submit "確認画面へ進む", class: 'btn btn-info' %>
          </div>
        <% end %>

  </div>