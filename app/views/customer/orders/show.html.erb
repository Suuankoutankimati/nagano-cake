<h1>注文履歴詳細</h1>
<table>
  <h2>注文情報</h2>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>支払方法</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= @order.post_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
        <td><%= @order.payment_method_i18n %></td>
        <td>ステータス</td>
      </tr>
    </tbody>
  </table>

  <table>
  <h2>請求情報</h2>
    <thead>
      <tr>
        <th>商品合計</th>
        <th>配送料</th>
        <th>ご請求額</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td></td>
        <td><%= @order.shipping_cost ||= 800.to_s(:delimited) %>円</td>
        <td></td>
      </tr>
    </tbody>
  </table>

  <table>
  <h2>注文内容</h2>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  </table>